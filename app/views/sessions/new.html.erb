
 <% if @user.errors.any? %>
<ul>
  <% @user.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>
<% end %>


<h1 id="formcolor">GiftBuddy Sign In!!!</h1> 
<br>
  <div class="boxed">
      <%= form_tag sign_in_path do %>
        <br>
        
          <%= label_tag :email  %>
          <br>
          <%= email_field_tag :email, nil, required: true %>
          <br>
          <br>

          <%= label_tag :password %>
          <br>
          <%= password_field_tag :password,  nil, required: true %>
          <br>
          <br>

        <%= submit_tag "Sign in!", :class => "btn btn-success" %>
        <br>

      <% end %>
      <br>
      <br>
      <br>

        <h5 id="formcolor">No Account? Sign up here!</h5>
      <br>
       <%= button_to "Create an Account", sign_up_path, :class => "btn btn-default", :method => :get %>
       <br>
  </div>
