
<% if @user.connected_to_stripe? %>

<h4>You are connected to stripe! You are all set to launch campaigns!</h4>

<% else %>

<div class="alert alert-info text-center" role="alert">You must have a Stripe account before you can launch a campaign. <a href="https://connect.stripe.com/oauth/authorize?response_type=code&amp;client_id=<%=ENV['CLIENT_ID'] %>&amp;scope=read_write">Connect with Stripe Here</a></div>

<% end %>
<% @user.pending_campaigns.each do |campaign|  %>
  <%= render campaign %>
  <div class="container">
    <div class="row">
      <%= button_to "Edit", edit_campaign_path(campaign), :class => "btn btn-warning col-md-6", :method => :get %>
    <% if @user.connected_to_stripe?  %>
      <%= button_to "Launch", launch_path(campaign), :class => "btn btn-success col-md-6", :method => :post %>      
    <% else %>
      <a href="https://connect.stripe.com/oauth/authorize?response_type=code&amp;client_id=<%=ENV['CLIENT_ID'] %>&amp;scope=read_write" class="btn btn-info col-md-6">You must connect to Stripe before you can launch this campaign</a>
    <% end %>

    </div>
  </div>
<% end %>

