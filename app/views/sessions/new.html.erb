
 <% if @user.errors.any? %>
<ul>
  <% @user.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>
<% end %>


<h3>GiftBuddy Sign In!</h3> 
<br>
<%= form_tag sign_in_path do %>
  <div  class = "form-group" >
    <%= label_tag :email  %>
    <%= email_field_tag :email, nil, required: true %>
  </div>

  <div class = "form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password,  nil, required: true %>
  </div>

  <div class = "form-group">
  <%= submit_tag "Sign in!", :class => "btn btn-success" %>
  </div>

<% end %>
<br>
